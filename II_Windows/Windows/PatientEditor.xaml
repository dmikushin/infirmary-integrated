<Window x:Class="II_Windows.PatientEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:II_Windows"
        mc:Ignorable="d"
        Title="Infirmary Integrated: Patient Editor"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Column for Devices (opening Cardiac Monitor, Ventilator, etc. -->
        <StackPanel Grid.Column="0" Grid.Row="0" Margin="5, 5, 5, 5">
            <Button Name="btnDeviceMonitor" Click="ButtonMonitor_Click" Padding="5, 5, 5, 5">Cardiac Monitor</Button>
        </StackPanel>

        <!-- Column for Patient Editor -->
        <ScrollViewer Grid.Column="1" Grid.Row="0">
            <StackPanel>
                <!-- Group for Basic Vital Signs -->
                <GroupBox Name="grpVitalSigns" Header="Vitals">
                    <Grid Grid.Column="1" Grid.Row="0" Margin="5, 5, 5, 5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Name="lblHR" Grid.Column="0" Grid.Row="0">HR</Label>
                        <local:NumUpDown x:Name="numHR" Grid.Column="1" Grid.Row="0" MinWidth="60"></local:NumUpDown>
                        <Label Name="lblNIBP" Grid.Column="0" Grid.Row="1">NIBP</Label>
                        <local:NumUpDown x:Name="numNSBP" Grid.Column="1" Grid.Row="1" MinWidth="60"></local:NumUpDown>
                        <Label Name="lblNDBP" Grid.Column="2" Grid.Row="1">/</Label>
                        <local:NumUpDown x:Name="numNDBP" Grid.Column="3" Grid.Row="1" MinWidth="60"></local:NumUpDown>
                        <Label Name="lblRR" Grid.Column="0" Grid.Row="2">RR</Label>
                        <local:NumUpDown x:Name="numRR" Grid.Column="1" Grid.Row="2" MinWidth="60"></local:NumUpDown>
                        <Label Name="lblSPO2" Grid.Column="0" Grid.Row="3">SPO2</Label>
                        <local:NumUpDown x:Name="numSPO2" Grid.Column="1" Grid.Row="3" MinWidth="60"></local:NumUpDown>
                        <Label Name="lblT" Grid.Column="0" Grid.Row="4">T</Label>
                        <local:NumUpDown x:Name="numT" Grid.Column="1" Grid.Row="4" MinWidth="60"></local:NumUpDown>

                        <Label Name="lblCardiacRhythm" Grid.Column="0" Grid.Row="5">Card Rhythm</Label>
                        <ComboBox Name="comboCardiacRhythm" Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="4"></ComboBox>

                        <Label Name="lblRespiratoryRhythm" Grid.Column="0" Grid.Row="7">Resp Rythm</Label>
                        <ComboBox Name="comboRespiratoryRhythm" Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="4"></ComboBox>

                        <CheckBox Name="checkDefaultVitals" Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="4" Margin="0, 5, 0, 0">Default vitals</CheckBox>
                    </Grid>
                </GroupBox>

                <!-- Group for Advanced Hemodynamics -->
                <GroupBox Name="grpHemodynamics" Header="Hemodynamics">
                    <Grid Grid.Column="1" Grid.Row="0" Margin="5, 5, 5, 5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Name="lblETCO2" Grid.Column="0" Grid.Row="0">HR</Label>
                        <local:NumUpDown x:Name="numETCO2" Grid.Column="1" Grid.Row="0" MinWidth="60"></local:NumUpDown>
                        <Label Name="lblCVP" Grid.Column="0" Grid.Row="1">HR</Label>
                        <local:NumUpDown x:Name="numCVP" Grid.Column="1" Grid.Row="1" MinWidth="60"></local:NumUpDown>
                        <Label Name="lblASBP" Grid.Column="0" Grid.Row="2">NIBP</Label>
                        <local:NumUpDown x:Name="numASBP" Grid.Column="1" Grid.Row="2" MinWidth="60"></local:NumUpDown>
                        <Label Name="lblADBP" Grid.Column="2" Grid.Row="2">/</Label>
                        <local:NumUpDown x:Name="numADBP" Grid.Column="3" Grid.Row="2" MinWidth="60"></local:NumUpDown>
                        <Label Name="lblPSBP" Grid.Column="0" Grid.Row="3">NIBP</Label>
                        <local:NumUpDown x:Name="numPSBP" Grid.Column="1" Grid.Row="3" MinWidth="60"></local:NumUpDown>
                        <Label Name="lblPDBP" Grid.Column="2" Grid.Row="3">/</Label>
                        <local:NumUpDown x:Name="numPDBP" Grid.Column="3" Grid.Row="3" MinWidth="60"></local:NumUpDown>
                    </Grid>
                </GroupBox>

                <!-- Group for Respiratory Profile -->
                <GroupBox Name="grpRespiratoryProfile" Header="Respiratory">
                    <Grid Grid.Column="1" Grid.Row="0" Margin="5, 5, 5, 5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Name="lblInspiratoryRatio" Grid.Column="0" Grid.Row="0">IE Ratio</Label>
                        <local:NumUpDown x:Name="numInspiratoryRatio" Grid.Column="1" Grid.Row="0" MinWidth="60"></local:NumUpDown>
                        <Label Name="lblExpiratoryRatio" Grid.Column="2" Grid.Row="0">:</Label>
                        <local:NumUpDown x:Name="numExpiratoryRatio" Grid.Column="3" Grid.Row="0" MinWidth="60"></local:NumUpDown>
                    </Grid>
                </GroupBox>



                <!-- Group for Cardiac Profile -->
                <GroupBox Name="grpCardiacProfile" Header="Cardiac">
                    <Grid Grid.Column="1" Grid.Row="0" Margin="5, 5, 5, 5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>


                    </Grid>
                </GroupBox>



            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
